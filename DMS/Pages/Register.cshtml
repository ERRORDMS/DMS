@page
@model DMS.Pages.RegisterModel
@{
    Layout = null;
    
    if (User.Identity.IsAuthenticated)
    {
    <script>window.location = '/'</script>
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
          integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
          crossorigin="anonymous" />
    <link href="~/css/auth.css" rel="stylesheet" />
</head>
<body>
    <img src="~/images/wave.png" class="wave" />
    <div class="container">
        <div class="img">
            <img src="~/images/download1.svg" />
        </div>
        <div class="login-content">
            <form action="javascript:register()" method="post">
                <img src="~/images/download2.svg" />
                <h2 class="title">Welcome</h2>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Username <span class="err102">Username already exists</span></h5>
                        <input type="text" class="input email_input" id="email_input" autocomplete="off" />
                    </div>
                </div>
                <div class="input-div one">
                    <div class="i">
                        <i class="far fa-envelope"></i>
                    </div>
                    <div class="div">
                        <h5>E-mail <span class="err104">Email already exists</span></h5>
                        <input type="email" class="input email_input" id="email_input" autocomplete="off" />
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input type="password" class="input" id="password_input" />
                    </div>
                </div>
                <div class="input-div conf-pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Confirm Password</h5>
                        <input type="password" class="input" />
                    </div>
                </div>
                <input type="submit" class="btn" value="Register" />
            </form>
        </div>
    </div>
    <script src="~/js/main.js"></script>
    <script>
        function register() {
            const xhr = new XMLHttpRequest();
            xhr.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                           var t = this.responseText;
                    var obj = JSON.parse(t);

                    var statusCode = obj.StatusCode;


                    if (statusCode == 0) {
                        window.location = 'index';
                    }
                    if (statusCode == 102) {
                        // Username already exists
                        $(".err102").fadeIn(200);
                        console.log(102)
                    } else {
                        $(".err102").fadeOut(0);
                    }
                    if (statusCode == 103) {
                        console.log(103)
                    }
                    if (statusCode == 104) {
                        // Email exists
                        $(".err104").fadeIn(200);
                        console.log(104)
                    } else {
                        $(".err104").fadeOut(0);
                    }
                }
            }
            let email = document.getElementById('email_input').value;
            let password = document.getElementById('password_input').value;
            const fd = new FormData();
            fd.append("email", email);
            fd.append("password", password);
            xhr.open('post', 'api/authorization/Register',true);
            xhr.send(fd);
        }
    </script>
</body>
</html>
