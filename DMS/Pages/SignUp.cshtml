@page
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
    <link rel="stylesheet" href="~/css/vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
          integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
          crossorigin="anonymous" />
    <script src="~/js/vendor.js" asp-append-version="true"></script>

</head>
<body>
    <img class="wave" src="~/images/wave.png">
    <div class="container">
        <div class="img">
            <img src="~/images/download1.svg">
        </div>
        <div class="login-content">
            <form action="javascript:register()">
                <img src="~/images/download2.svg">
                <h2 class="title">Welcome</h2>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Username</h5>
                        <input id="txtUsername" required type="text" class="input">
                    </div>
                </div>
                <div class="input-div one">
                    <div class="i">
                        <i class="far fa-envelope"></i>
                    </div>
                    <div class="div">
                        <h5>Email</h5>
                        <input id="txtEmail" required type="email" class="input">
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input id="txtPassword" required type="password" class="input">
                    </div>
                </div>
                <a href="#">Forgot Password?</a>
                <input type="submit" class="btn" value="Login">
            </form>
        </div>
    </div>
    <script src="~/js/main.js"></script>
    <script>
        function register() {

            const xhr = new XMLHttpRequest();

            xhr.onreadystatechange = function () {
                if (this.readyState == 4 || this.status == 200) {

                    var t = this.responseText;
                    var obj = JSON.parse(t);

                    var statusCode = obj.StatusCode;


                    if (statusCode == 0) {
                        window.location = 'index';
                    }
                    else if (statusCode == 102) {
                        // Username already exists
                        $(document).ready(function () {
                            $("#txtUsername").css("borderBottom","1px solid rgb(255,254,253)")
                        })
                    } else if (statusCode == 103) {
                        // Internal error
                    } else if (statusCode == 104) {
                        // Email exists
                    }


                }
            }

            xhr.open('POST', 'api/Authorization/Register', true);

            const formData = new FormData();


            var email = document.getElementById('txtEmail').value;
            var username = document.getElementById('txtUsername').value;
            var password = document.getElementById('txtPassword').value;

            formData.append('Email', email);
            formData.append('Username', username);
            formData.append('Password', password);

            xhr.send(formData);
        }
    </script>
</body>
</html>
