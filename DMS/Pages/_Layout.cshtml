               .ParentId(6)
               .Option("path", Url.Page("AddSearchKey"))
               .Selected(IsCurrentPage("AddSearchKey"));


                    items.Add()
               .Text(Localizer["ManageSearchKey"].Value)
               .Icon("edit")
               .ParentId(6)
               .Option("path", Url.Page("ManageSearchKey"))
