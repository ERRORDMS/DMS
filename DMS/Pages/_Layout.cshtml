                .Icon("key")
                .HasItems(true)
                .Option("path", Url.Page("AddSearchKey"))
                .Expanded(IsCurrentPage("AddSearchKey") || IsCurrentPage("ManageSearchKey"))
                .Selected(IsCurrentPage("AddSearchKey") || IsCurrentPage("ManageSearchKey"))
                .Selected(false);

                    items.Add()
               .Text(Localizer["AddSearchKey"].Value)
