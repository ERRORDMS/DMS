@page
@model DMS.Pages.ProfileModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = null;
    ViewData["Title"] = Localizer["Title"];

}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Localizer["Title"]</title>
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
          integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
          crossorigin="anonymous" />
    <link href="~/css/auth.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Site.css" />
    <script src="~/js/vendor.js" asp-append-version="true"></script>
</head>
<body>
    <img src="~/images/waveblue.png" class="wave" />
    <div class="container">
        <div class="img">
            <img src="~/images/download1.svg" />
        </div>
        <div class="login-content">
            <form action="javascript:register()" method="post">
                <img src="~/images/download2(1).svg" />
                <h2 class="title">@Localizer["Welcome"]</h2>
                <span class="err99">@Localizer["MissingFields"]</span>

                <div class="input-div one">
                    <div class="i">
                        <i class="far fa-envelope"></i>
                    </div>
                    <div class="div">
                        <h5>@Localizer["Email"]</h5>
                        <input type="email" disabled class="input email_input" id="email_input" autocomplete="off" />
                    </div>
                </div>
                <div class="input-div phone_number">
                    <div class="i">
                        <i class="fas fa-phone-volume"></i>
                    </div>
                    <div class="div">
                        <h5>Phone Number (optional)</h5>
                        <input type="text" class="input" id="phone_number_input" />
                    </div>
                </div>

                <div class="input-div twofactorauth">
                    <div class="i">
                        <i class="fas fa-phone-volume"></i>
                    </div>
                    <div class="div">
                        <h5>Two Factor Authentication</h5>
                        <input type="checkbox" class="input" id="tfa_input" />
                    </div>
                </div>
                <a href="Dashboard">@Localizer["Back"]</a>
                <input type="submit" class="btn" id="btnSave" value="@Localizer["Save"]" />

                @(Html.DevExtreme().Button()
                    .Type(ButtonType.Normal)
                    .ID("btnChangeLang")
                    .OnClick(System.Globalization.CultureInfo.CurrentCulture.Name != "en-US" ? "switchLanguageEn" : "switchLanguageAr")
                    .Text(System.Globalization.CultureInfo.CurrentCulture.Name != "en-US" ? "English" : "عربي"))
            </form>
        </div>
    </div>
    <script src="~/js/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        function switchLanguageEn() {
            switchLanguage("en-US");
        }

        function switchLanguageAr() {
            switchLanguage("ar-SA");
        }

        function switchLanguage(culture) {
            const xhr = new XMLHttpRequest();
            xhr.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    location.reload();
                }
            }
            const fd = new FormData();
            fd.append('culture', culture);
            xhr.open("POST", "api/Culture", true);
            xhr.send(fd);
        }

        function save() {
            let phone_number = document.getElementById('phone_number_input').value;
            let tfa = document.getElementById('tfa_input').value;
           
                const xhr = new XMLHttpRequest();
                xhr.onreadystatechange = function () {
                    if (this.readyState == 4 && this.status == 200) {
                        var t = this.responseText;
                        var obj = JSON.parse(t);

                        var statusCode = obj.StatusCode;


                        if (statusCode == 0) {
                            $(".err98").fadeIn(200);
                        }

                        if (statusCode == 103) {
                            location.reload()
                        }
                    }
                }

                const fd = new FormData();
                fd.append("phone", phone_number)
                fd.append("tfa", tfa);
                xhr.open('post', 'api/authorization/SaveProfile', true);
                xhr.send(fd);
        }
    </script>


</body>
</html>
